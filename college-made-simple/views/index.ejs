<html>
<head>
  <title>College made simple</title>

  <!-- Materialize CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
  <link rel="stylesheet" type="text/css" href="css/pad.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- JavaScript for: jQuery, angular, materialize, and angular-materialize. All of which are needed. -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-materialize/0.2.2/angular-materialize.min.js"></script>

  <!-- Google Sign in-->
  <script src="https://apis.google.com/js/platform.js" async defer></script>
  <meta name="google-signin-client_id" content="805467826310-4pm5ke6uhnplc5tsm02no22a54n01tau.apps.googleusercontent.com">
  <!-- Your app -->
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.js"></script>
  <script type="text/javascript" src="javascripts/angularApp.js"></script>
</head>


<body ng-app="materializeApp">
  <!--side nav-->
  <nav class="blue lighten-2" role="navigation" ng-controller="SideBar">
    <div class="nav-wrapper container"><header><a id="logo-container" href="#" class="brand-logo">College Made Simple</a></header>
      <div>
        <ul id="slide-out" class="side-nav fixed">
          <li>
            <div class="userView">
              <a href="#!user"><img height="250" width="250" src="images/ucsc.jpg"></a>
              <a href="#!name"><span class="grey-text name"><font size="+3">Sammy Slug</font></span></a>
              <a href="#!email"><span class="grey-text email">sslug@ucsc.edu</span></a>
              <!--
              <div class="g-signin2" data-onsuccess="onSignIn"></div>
              <a href="#" onclick="signOut();">Sign out</a>
              <script>
                function signOut() {
                  var auth2 = gapi.auth2.getAuthInstance();
                  auth2.signOut().then(function () {
                    console.log('User signed out.');
                  });
                }
              </script>
              -->
              <google-sign-in-button button-id="signin" options="options"></google-sign-in-button>
              {{test1}}
            </div></li>
            <li><div class="divider"></div></li>
            <li><a class="waves-effect" href="#!"><i class="material-icons">cloud</i>Link and Icon</a></li>
            <li><a class="waves-effect" href="#!">Link 2</a></li>
            <li><a class="waves-effect" href="#!">Link 3</a></li>
          </ul>
          <a href="#" data-activates="slide-out" class="button-collapse "><i class="material-icons black-text">menu</i></a>
        </div>
      </div>
    </nav>
    <!--end side nav-->
    <main>
      <div class="cointainer">
        <div class="section">
          <ui-view></ui-view>
        </div>
      </div>
      <div class="container">
        <div class="section">
          <div class="row">
            <div class="col s12 m6">
              <div id="chartContainer1" style="height: 500px; width: 100%;"></div><!-- chart 1 -->
            </div>
            <div class="col s12 m6">
              <div id="chartContainer2" style="height: 500px; width: 100%;"></div><!-- chart 2 -->
            </div>
          </div>
        </div>


        <script type="text/ng-template" id="/home.html">
          <div class="row">
            <div class="col s12 m6">
              <div class="card-panel grey darken-2">
                <span class="white-text">
                  <div ng-repeat="post in numbers">
                    {{post.title}}
                    <span>
                      {{post.jobs}}
                      
                    </span>
                  </div>
                </span>
              </div>
            </div>
            <div class="col s12 m6">
              <div class="card-panel grey darken-2">
                <span class="white-text"><a href="/#/edit">Edit</a>
                </span>
              </div>


            </script>

            <script type="text/ng-template" id="/edit.html">
              <div class="row">
                <div class="col s12">
                  <div class="card-panel grey darken-2">
                    <span class="white-text">
                      <form ng-submit="edit()"
                      style="margin-top:30px;">
                      <h4>Edit Your Data</h4>

                      <div class="form-group">Name:
                        <input type="text"
                        class="form-control"
                        placeholder="Name"
                        ng-model="name"></input>
                      </div>
                      <div class="form-group">Jobs:
                        <input type="number"
                        class="form-control"
                        placeholder="0"
                        ng-model="jobs"></input>
                      </div>
                      <button type="submit" class="btn btn-primary">Save</button>
                      <a ng-href="#/home">Back</a>
                    </span>
                  </div>
                </div>
              </script>
            </main>
            <!--Import jQuery before materialize.js-->
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script type="text/javascript" src="js/materialize.min.js"></script>
            <script type="text/javascript" src="js/init.js"></script>
            <script type="text/javascript" src="js/charts.js"></script>
            <script type="text/javascript" src="js/chartmaker.js"></script>
          </body>
          </html>