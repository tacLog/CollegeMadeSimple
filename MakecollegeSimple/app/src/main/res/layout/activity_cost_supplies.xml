<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


      <include layout="@layout/app_bar_main_menu"
           android:id="@+id/app_bar_main_menu"

           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="114dp"
        android:id="@+id/newCategory"
        android:hint="Enter category" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="9"
        android:id="@+id/newCost"
        android:layout_alignBaseline="@+id/newCategory"
        android:layout_alignBottom="@+id/newCategory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter cost per month" />

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newCategory"
        android:id="@+id/okButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:id="@+id/totalSupplies"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/okButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/displayCategory"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/okButton"
        android:layout_toRightOf="@+id/newCategory"
        android:layout_toEndOf="@+id/newCategory"
        android:id="@+id/displayCost"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


</RelativeLayout>