<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Quarter or Semester system?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:id="@+id/tvSystem" />

    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/tvTitle"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvSystem"
        android:layout_alignStart="@+id/tvSystem" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSystem"
        android:layout_alignLeft="@+id/tvSystem"
        android:layout_alignStart="@+id/tvSystem"
        android:layout_marginTop="14dp"
        android:id="@+id/rgRadioSystemGroup">
        <RadioButton
            android:text="@string/rb_quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_quarter"
            android:layout_alignBaseline="@+id/rb_semester"
            android:layout_alignBottom="@+id/rb_semester"
            android:layout_alignLeft="@+id/tvSystem"
            android:layout_alignStart="@+id/tvSystem" />

        <RadioButton
            android:text="@string/rb_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/rb_semester"
            android:layout_below="@+id/tvSystem"
            android:layout_toRightOf="@+id/tvSystem"
            android:layout_toEndOf="@+id/tvSystem"/>
    </RadioGroup>

    <Button
        android:text="Save Changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="127dp"
        android:id="@+id/bSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>